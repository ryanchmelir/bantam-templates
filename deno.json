{
  "tasks": {
    "test": "deno test tests/",
    "check": "deno check src/**/*.ts"
  },
  "imports": {},
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "lib": ["deno.window"]
  },
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
} 